<UserControl x:Class="ClubArcada.Apps.CashTimer.Win.Controls.TextBoxCtrl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ClubArcada.Apps.CashTimer.Win.Controls"
             mc:Ignorable="d" 
             Background="Black"
             Padding="1"
             d:DesignHeight="40" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="13"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="{Binding Label, Mode=TwoWay}" FontSize="11" Foreground="White" />
        <TextBox VerticalContentAlignment="Center" BorderBrush="Gray" Text="{Binding Text, Mode=TwoWay}"  Grid.Row="1"/>
    </Grid>
</UserControl>
